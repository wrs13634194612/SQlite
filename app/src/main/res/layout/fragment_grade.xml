<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_all_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示所有列表" />

            <Button
                android:id="@+id/grade_delete_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="删除所有列表" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_grade_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:scaleType="fitStart"
                android:src="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/btn_grade_camera"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:text="开始拍照" />

            <EditText
                android:id="@+id/add_et_number_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="新增学号：" />

            <EditText
                android:id="@+id/add_et_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="新增班级：" />

            <EditText
                android:id="@+id/add_et_score_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="高考成绩：" />

            <EditText
                android:id="@+id/add_et_price_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="新增学费：" />

            <Button
                android:id="@+id/btn_add_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="添加" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_grade_search"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:scaleType="fitStart"
                android:src="@mipmap/ic_launcher" />


            <EditText
                android:id="@+id/et_search_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请输入要查询id：" />


            <TextView
                android:id="@+id/search_tv_number_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/search_tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/search_tv_score_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/search_tv_price_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/app_name"
                android:layout_weight="1"
                android:background="@android:color/holo_green_light"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btn_search_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="查询"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_update_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:scaleType="fitStart"
                android:src="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/btn_update_camera"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="重新拍照" />

            <EditText
                android:id="@+id/et_update_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="编辑id：" />

            <EditText
                android:id="@+id/update_et_number_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="编辑学号：" />

            <EditText
                android:id="@+id/update_et_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="编辑班级：" />

            <EditText
                android:id="@+id/update_et_score_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="高考成绩：" />

            <EditText
                android:id="@+id/update_et_price_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="编辑学费：" />

            <Button
                android:id="@+id/btn_update_grade"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="编辑" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_delete_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入要删除id：" />

            <Button
                android:id="@+id/btn_delete_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除" />

        </LinearLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/grid_view_grade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4" />


</LinearLayout>